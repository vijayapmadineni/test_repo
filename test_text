import datetime
import pytz

def is_alternate_wednesday(start_date, today):
    """Check if today is an alternate Wednesday starting from the start date."""
    delta_days = (today - start_date).days
    return delta_days % 14 == 0

def test_alternate_wednesdays(start_date, num_weeks=52):
    """Test the alternate Wednesday logic for a range of weeks."""
    eastern = pytz.timezone("US/Eastern")
    current_date = start_date

    # Iterate through dates to validate alternate Wednesdays
    print(f"Starting from {start_date} (Eastern Time):")
    for week in range(num_weeks):
        # Advance to the next Wednesday
        current_date += datetime.timedelta(days=7)
        current_date_et = datetime.datetime.combine(current_date, datetime.datetime.min.time(), pytz.utc).astimezone(eastern).date()

        # Check if it's an alternate Wednesday
        if is_alternate_wednesday(start_date, current_date_et):
            print(f"  {current_date_et} is an alternate Wednesday")
        else:
            print(f"  {current_date_et} is NOT an alternate Wednesday")

# Define the start date (2024-12-11)
start_date = datetime.date(2024, 12, 11)

# Run the test for the next 52 weeks
test_alternate_wednesdays(start_date)
